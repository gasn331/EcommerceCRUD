@model Shared.DTOs.ProdutoDTO

@{
    ViewData["Title"] = "Excluir Produto";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Commerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .container {
            margin-top: 20px;
        }

        .dl-horizontal dt {
            text-align: right;
            font-weight: bold;
        }

        .dl-horizontal dd {
            margin-left: 0;
        }

        .btn-group {
            margin-top: 1rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="mb-4">@ViewData["Title"]</h1>

        <h4 class="mb-3">Produto</h4>
        <hr />

        <div class="alert alert-warning">
            <h4 class="alert-heading">Você tem certeza que deseja excluir este produto?</h4>
        </div>

        <dl class="row dl-horizontal">
            <dt class="col-sm-3">Código</dt>
            <dd class="col-sm-9">@Model.Codigo</dd>

            <dt class="col-sm-3">Descrição</dt>
            <dd class="col-sm-9">@Model.Descricao</dd>

            <dt class="col-sm-3">Departamento</dt>
            <dd class="col-sm-9">@Model.Departamento.Descricao</dd>

            <dt class="col-sm-3">Preço</dt>
            <dd class="col-sm-9">@Model.Preco.ToString("C")</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@(Model.Status ? "Ativo" : "Inativo")</dd>
        </dl>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" name="codigo" value="@Model.Codigo" />
            <div class="btn-group">
                <button type="submit" class="btn btn-danger">Excluir</button>
                <a href="@Url.Action("Index", "Produto")" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
