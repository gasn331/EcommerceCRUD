@model Shared.DTOs.ProdutoDTO

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Commerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .container {
            margin-top: 20px;
        }

        .dl-horizontal dt {
            font-weight: bold;
        }

        .btn-group {
            margin-top: 1rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>

        <div class="card">
            <div class="card-header">
                <h4>Produto</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Código</dt>
                    <dd class="col-sm-9">@Model.Codigo</dd>

                    <dt class="col-sm-3">Descrição</dt>
                    <dd class="col-sm-9">@Model.Descricao</dd>

                    <dt class="col-sm-3">Departamento</dt>
                    <dd class="col-sm-9">@Model.Departamento.Descricao</dd>

                    <dt class="col-sm-3">Preço</dt>
                    <dd class="col-sm-9">@Model.Preco.ToString("C")</dd>

                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">@(Model.Status ? "Ativo" : "Inativo")</dd>
                </dl>
                <div class="btn-group">
                    <a href="@Url.Action("Edit", "Produto", new { codigo = Model.Codigo })" class="btn btn-warning">Editar</a>
                    <a href="@Url.Action("Index", "Produto")" class="btn btn-secondary">Voltar</a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
